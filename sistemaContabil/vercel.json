{
    "version": 2,
    "builds": [
      {
        "src": "backend/src/server.ts",
        "use": "@vercel/node",
        "config": { "includeFiles": ["frontend/**"] } 
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/src/server.ts"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      }
    ]
  }
  